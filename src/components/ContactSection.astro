---
const contactInfo = [
    {
        icon: "map",
        title: "Dirección",
        content: "Av. Principal #123, Col. Centro, Ciudad",
        gradient: "from-blue-500 to-cyan-500"
    },
    {
        icon: "phone",
        title: "Teléfono",
        content: "+52 (55) 1234-5678",
        gradient: "from-teal-500 to-emerald-500"
    },
    {
        icon: "mail",
        title: "Email",
        content: "contacto@dentalcare.com",
        gradient: "from-purple-500 to-pink-500"
    },
    {
        icon: "clock",
        title: "Horario",
        content: "Lun - Vie: 9:00 - 19:00\nSáb: 9:00 - 14:00",
        gradient: "from-orange-500 to-red-500"
    }
];

// ICONOS SVG
function iconSvg(name) {
    switch (name) {
        case "map":
            return `
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M9 20l-5.447-2.724A2 2 0 013 15.382V6.618a2 2 0 011.553-1.894L9 2m0 18l6 3m-6-3V2m6 19l5.447-2.724A2 2 0 0021 15.382V6.618a2 2 0 00-1.553-1.894L15 2m0 18V2"/>
        </svg>`;
        case "phone":
            return `
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M3 5a2 2 0 012-2h3l2 5-2 2c1.5 3 3.5 5 6 6l2-2 5 2v3a2 2 0 01-2 2h-1C9 21 3 15 3 8V5z"/>
        </svg>`;
        case "mail":
            return `
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 8h18a2 2 0 002-2V6a2 2 0 00-2-2H3a2 2 0 00-2 2v8a2 2 0 002 2z"/>
        </svg>`;
        case "clock":
            return `
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M12 6v6l4 2m6-2a10 10 0 11-20 0 10 10 0 0120 0z"/>
        </svg>`;
        case "calendar":
            return `
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M8 7V3m8 4V3M3 11h18M5 5h14a2 2 0 012 2v12a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2z"/>
        </svg>`;
        case "send":
            return `
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M3 12l18-9-9 18-2-7-7-2z"/>
        </svg>`;
    }
}
---
<section id="contacto" class="py-32 bg-gradient-to-b from-gray-50 to-white relative overflow-hidden">
    <div class="absolute top-0 left-0 w-96 h-96 bg-teal-100/30 rounded-full blur-3xl"></div>

    <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">

        <!-- HEADER -->
        <div class="text-center mb-16 fade-on-scroll opacity-0 translate-y-8">
            <div class="inline-block px-4 py-2 bg-teal-100 rounded-full text-teal-700 font-medium text-sm mb-4">
                Contáctanos
            </div>
            <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
                Agenda Tu Cita Hoy
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Estamos aquí para ayudarte a lograr la sonrisa que siempre has deseado.
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12">

            <!-- LEFT SIDE: CTA -->
            <div class="space-y-8 fade-on-scroll opacity-0 -translate-x-8">
                <div class="bg-gradient-to-br from-teal-500 to-cyan-500 rounded-3xl p-8 text-white">
                    <h3 class="text-2xl font-bold mb-2">¿Listo para transformar tu sonrisa?</h3>
                    <p class="text-teal-50 mb-6">
                        Contáctanos y agenda tu cita. Estaremos encantados de atenderte.
                    </p>

                    <div class="flex items-center gap-3 mb-4">
                        <div set:html={iconSvg("calendar")}></div>
                        <span>Primera consulta sin costo</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <div set:html={iconSvg("phone")}></div>
                        <span>Atención inmediata en emergencias</span>
                    </div>
                </div>

                <!-- Contact Info Grid -->
                <div class="grid gap-6">
                    {
                        contactInfo.map((info, index) => (
                                <div
                                        class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow flex items-start gap-4 fade-on-scroll opacity-0 translate-y-8"
                                        style={`transition-delay: ${index * 100}ms`}
                                >
                                    <div class={`w-12 h-12 bg-gradient-to-br ${info.gradient} rounded-xl flex items-center justify-center flex-shrink-0`}
                                         set:html={iconSvg(info.icon)}>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-gray-900 mb-1">{info.title}</h4>
                                        <p class="text-gray-600 whitespace-pre-line">{info.content}</p>
                                    </div>
                                </div>
                        ))
                    }
                </div>
            </div>

            <!-- RIGHT SIDE: FORM (solo maquetado, sin lógica) -->
            <div class="bg-white rounded-3xl shadow-xl p-8 lg:p-12 fade-on-scroll opacity-0 translate-x-8">
                <form class="space-y-6">

                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Nombre</label>
                        <input
                                type="text"
                                placeholder="Tu nombre"
                                class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-teal-500 outline-none"
                        />
                    </div>

                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Email</label>
                        <input
                                type="email"
                                placeholder="tucorreo@mail.com"
                                class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-teal-500 outline-none"
                        />
                    </div>

                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Teléfono</label>
                        <input
                                type="text"
                                placeholder="(55) 1234-5678"
                                class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-teal-500 outline-none"
                        />
                    </div>

                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Mensaje</label>
                        <textarea
                                rows="5"
                                placeholder="Cuéntanos cómo podemos ayudarte"
                                class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-teal-500 outline-none resize-none"
                        ></textarea>
                    </div>

                    <button
                            type="submit"
                            class="flex items-center justify-center gap-3 w-full bg-gradient-to-r from-teal-500 to-cyan-500 text-white py-4 rounded-full font-semibold text-lg hover:shadow-xl hover:scale-105 transition-all"
                    >
                        Enviar Mensaje
                        <span set:html={iconSvg("send")}></span>
                    </button>
                </form>
            </div>

        </div>
    </div>
</section>

<script>
    const elements = document.querySelectorAll(".fade-on-scroll");

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting)
                entry.target.classList.add("fade-in-visible");
        });
    }, { threshold: 0.2 });

    elements.forEach(el => observer.observe(el));
</script>

<style>
    .fade-in-visible {
        opacity: 1 !important;
        transform: translate(0, 0) !important;
        transition: all 0.8s ease-out;
    }
</style>