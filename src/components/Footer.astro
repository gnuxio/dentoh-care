---
function iconSvg(name) {
    switch (name) {
        case "map":
            return `
        <svg class="w-5 h-5 text-teal-400" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M9 20l-5.447-2.724A2 2 0 013 15.382V6.618a2 2 0 
            011.553-1.894L9 2m0 18l6 3m-6-3V2m6 19l5.447-2.724A2 2 0 
            0021 15.382V6.618a2 2 0 00-1.553-1.894L15 2m0 18V2"/>
        </svg>`;
        case "phone":
            return `
        <svg class="w-5 h-5 text-teal-400" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M3 5a2 2 0 012-2h3l2 5-2 2c1.5 3 3.5 5 6 6l2-2 
            5 2v3a2 2 0 01-2 2h-1C9 21 3 15 3 8V5z"/>
        </svg>`;
        case "mail":
            return `
        <svg class="w-5 h-5 text-teal-400" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 
            8h18a2 2 0 002-2V6a2 2 0 
            00-2-2H3a2 2 0 00-2 2v8a2 2 0 002 2z"/>
        </svg>`;
        case "facebook":
            return `
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M22 12a10 10 0 10-11.5 9.87v-6.99H8v-2.88h2.5V9.41c0-2.46 
          1.47-3.82 3.72-3.82 1.08 0 2.21.19 2.21.19v2.43h-1.25c-1.23 
          0-1.61.77-1.61 1.56v1.87H18l-.4 2.88h-2.74v6.99A10 10 0 0022 
          12z"/>
        </svg>`;
        case "instagram":
            return `
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M7 2C4.243 2 2 4.243 2 
          7v10c0 2.757 2.243 5 5 5h10c2.757 0 
          5-2.243 5-5V7c0-2.757-2.243-5-5-5H7zm10 
          2c1.654 0 3 1.346 3 3v10c0 1.654-1.346 
          3-3 3H7c-1.654 0-3-1.346-3-3V7c0-1.654 
          1.346-3 3-3h10zm-5 3a5 5 0 
          100 10 5 5 0 000-10zm0 2a3 3 0 
          110 6 3 3 0 010-6zm4.5-.75a1.25 1.25 
          0 11-2.5 0 1.25 1.25 0 012.5 0z"/>
        </svg>`;
        case "twitter":
            return `
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M22.46 6c-.77.35-1.5.6-2.28.7a3.93 3.93 
          0 001.7-2.18c-.75.46-1.6.8-2.5 
          1A3.92 3.92 0 0015.5 4c-2.2 0-3.95 
          1.8-3.95 4 0 .3.03.6.1.9-3.3-.2-6.2-1.8-8.15-4.3a4.2 
          4.2 0 00-.55 2c0 1.4.65 2.7 
          1.7 3.5-.6 0-1.3-.2-1.8-.5v.05c0 
          2 1.35 3.6 3.15 4-.45.1-.9.2-1.4.2-.3 
          0-.65 0-.95-.1.65 2.1 2.55 3.6 4.8 
          3.65A8 8 0 012 19.5 11.3 11.3 0 
         008.29 21c7.45 0 11.54-6.3 
          11.54-11.8v-.55c.8-.6 
          1.5-1.3 2.1-2.1z"/>
        </svg>`;
    }
}
---
<footer class="bg-gradient-to-br from-gray-900 to-gray-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">

        <!-- GRID SUPERIOR -->
        <div class="grid md:grid-cols-4 gap-12 mb-12">

            <!-- BRAND -->
            <div>
                <div class="flex items-center gap-2 mb-4">
                    <div class="w-10 h-10 bg-gradient-to-br from-teal-400 to-cyan-500 rounded-xl flex items-center justify-center">
                        <span class="text-white font-bold text-xl">D</span>
                    </div>
                    <span class="text-2xl font-bold">DentalCare</span>
                </div>

                <p class="text-gray-400 leading-relaxed">
                    Tu sonrisa es nuestra pasión. Cuidado dental de excelencia con tecnología de vanguardia.
                </p>
            </div>

            <!-- QUICK LINKS -->
            <div>
                <h3 class="text-lg font-bold mb-4">Enlaces Rápidos</h3>
                <ul class="space-y-3">
                    <li><a href="#inicio" class="text-gray-400 hover:text-teal-400 transition-colors">Inicio</a></li>
                    <li><a href="#sobre-mi" class="text-gray-400 hover:text-teal-400 transition-colors">Sobre Mí</a></li>
                    <li><a href="#servicios" class="text-gray-400 hover:text-teal-400 transition-colors">Servicios</a></li>
                    <li><a href="#testimonios" class="text-gray-400 hover:text-teal-400 transition-colors">Testimonios</a></li>
                    <li><a href="#contacto" class="text-gray-400 hover:text-teal-400 transition-colors">Contacto</a></li>
                </ul>
            </div>

            <!-- SERVICES -->
            <div>
                <h3 class="text-lg font-bold mb-4">Servicios</h3>
                <ul class="space-y-3 text-gray-400">
                    <li>Blanqueamiento Dental</li>
                    <li>Ortodoncia</li>
                    <li>Implantes Dentales</li>
                    <li>Limpieza Dental</li>
                    <li>Cirugía Oral</li>
                </ul>
            </div>

            <!-- CONTACT -->
            <div>
                <h3 class="text-lg font-bold mb-4">Contacto</h3>
                <ul class="space-y-3">

                    <li class="flex items-start gap-3 text-gray-400">
                        <span set:html={iconSvg("map")} class="mt-0.5"></span>
                        <span>Av. Principal #123, Col. Centro, Ciudad</span>
                    </li>

                    <li class="flex items-center gap-3 text-gray-400">
                        <span set:html={iconSvg("phone")}></span>
                        <span>+52 (55) 1234-5678</span>
                    </li>

                    <li class="flex items-center gap-3 text-gray-400">
                        <span set:html={iconSvg("mail")}></span>
                        <span>contacto@dentalcare.com</span>
                    </li>

                </ul>
            </div>
        </div>

        <!-- BOTTOM BAR -->
        <div class="border-t border-gray-700 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-gray-400 text-sm">
                © 2025 DentalCare. Todos los derechos reservados.
            </p>

            <div class="flex gap-4">
                <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-teal-500 rounded-full flex items-center justify-center transition-colors">
                    <span set:html={iconSvg("facebook")}></span>
                </a>
                <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-teal-500 rounded-full flex items-center justify-center transition-colors">
                    <span set:html={iconSvg("instagram")}></span>
                </a>
                <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-teal-500 rounded-full flex items-center justify-center transition-colors">
                    <span set:html={iconSvg("twitter")}></span>
                </a>
            </div>
        </div>

    </div>
</footer>